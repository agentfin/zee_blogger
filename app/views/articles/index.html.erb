<div class="center hero-unit">
	<h1>All Articles</h1>
</div>
	<h2>
	<ul>
		<% @articles.each do |article| %>
			<li>
				<%= link_to article.title, article_path(article), :class => 'article_title', :id => "article_#{article.id}" %>
				<li>
					<%= article.tag_list %>
				</li>
			</li>
		<% end %>

	</ul>
	</h2>
	<ul>
		<%= link_to "New Article", new_article_path, :class => "new_article" %>
	</ul>
	
	<%= image_tag("AmIWearingPants_web.jpg", alt: "PANTS!!!") %>
	